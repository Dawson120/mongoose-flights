<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form action="/meals" method="POST">
      <label for="mealname-input">Meal Name:</label>
      <input type="text" name="name" id="mealname-input">
    <button type="submit">Add Meal</button>
  </form>
  <h2>Current Meals:</h2>
  <ul>
    <% meals.forEach(function (meal) { %>
    <li>
      <%= meal.name %>
    </li>
    <% }) %>
  </ul>
</main>

